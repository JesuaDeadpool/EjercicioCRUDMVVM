<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioCRUDMVVM.Views.AddEditProveedoresView"
             Title="Agregar/Actualizar Registro">

    <VerticalStackLayout Padding="30" Spacing="20">

        <Label Text="Nombre del Proveedor"/>
        <Entry Text="" Keyboard="Text"/>

        <Label Text="Fabrica"/>
        <Entry Text="" Keyboard="Text"/>
        
        <Label Text="Telefono"/>
        <Entry Text="" Keyboard="Numeric"/>
        
        <Label Text="Producto"/>
        <Entry Text="" Keyboard="Text"/>


        <Grid RowDefinitions="Auto" ColumnDefinitions="*,*" ColumnSpacing="20" Margin="0,40,0,0">
            <Button Text="Agregar"  Grid.Column="0"/>
            <Button Text="Actualizar" Grid.Column="1"/>
        </Grid>



    </VerticalStackLayout>
</ContentPage>